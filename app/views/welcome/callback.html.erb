<h3>Agendas do ICB:</h3>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Observação</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @agendas.each do |agenda| %>
      <tr>
        <td><%= agenda.nome %></td>
        <td><%= agenda.observacao %></td>
        <td><%= link_to "Inscrição", inscricao_path(agenda), class: 'btn btn-light'  %> </td>
        <td><%= link_to 'Calendário', eventoagenda_path(agenda), class: 'btn btn-success'  %>  </td>
        <% @inscricao.each do |i| %>
          <% if (i.agenda_id == agenda.id and i.usertipo == "Admin") or session[:admingeral] == true  %>
            <td><%= link_to 'Inscritos', verinscritos_path(agenda), class: 'btn btn-light'  %></td>  
          <% else %>  
            <td></td> 
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


